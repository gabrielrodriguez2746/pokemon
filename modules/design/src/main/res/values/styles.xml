<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Styles" />

    <style name="Styles.Pokemon" />

    <style name="Styles.Pokemon.Text" />

    <style name="Styles.Pokemon.Text.Primary">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Styles.Pokemon.Text.Secondary">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <!--Buttons-->

    <style name="Style.Pokemon.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">@dimen/pokemon_spacing_s</item>
        <item name="android:paddingEnd">@dimen/pokemon_spacing_s</item>
        <item name="iconGravity">textStart</item>

    </style>

    <style name="Style.Pokemon.Button.XS">
        <item name="android:minHeight">@dimen/pokemon_button_xs_min_height</item>
        <item name="android:minWidth">@dimen/pokemon_button_xs_min_width</item>
        <item name="android:textAppearance">@style/TextAppearance.Pokemon.ButtonXS</item>
        <item name="iconSize">@dimen/pokemon_button_xs_icon_size</item>
        <item name="iconPadding">@dimen/pokemon_button_xs_icon_padding</item>
    </style>

    <style name="Style.Pokemon.Button.S">
        <item name="android:minHeight">@dimen/pokemon_button_s_min_height</item>
        <item name="android:minWidth">@dimen/pokemon_button_s_min_width</item>
        <item name="android:textAppearance">@style/TextAppearance.Pokemon.ButtonS</item>
        <item name="iconSize">@dimen/pokemon_button_s_icon_size</item>
        <item name="iconPadding">@dimen/pokemon_button_s_icon_padding</item>
    </style>

    <style name="Style.Pokemon.Button.M">
        <item name="android:minHeight">@dimen/pokemon_button_m_min_height</item>
        <item name="android:minWidth">@dimen/pokemon_button_m_min_width</item>
        <item name="android:textAppearance">@style/TextAppearance.Pokemon.ButtonM</item>
        <item name="iconSize">@dimen/pokemon_button_m_icon_size</item>
        <item name="iconPadding">@dimen/pokemon_button_m_icon_padding</item>
    </style>

    <style name="Style.Pokemon.Button.L">
        <item name="android:minHeight">@dimen/pokemon_button_l_min_height</item>
        <item name="android:minWidth">@dimen/pokemon_button_l_min_width</item>
        <item name="android:textAppearance">@style/TextAppearance.Pokemon.ButtonL</item>
        <item name="iconSize">@dimen/pokemon_button_l_icon_size</item>
        <item name="iconPadding">@dimen/pokemon_button_l_icon_padding</item>
    </style>
    
</resources>